<ul>
      {{#each model as |post|}}
        <li style="color:black;">{{post}}</li>
        {{/each }}
        </ul>
<form>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    {{input type="email" value=emailAddress class="form-control" id="exampleInputEmail1" placeholder="Email"}}
  </div>
  <div class="form-group">   
  <label for="message">Message</label>
     {{textarea value=message  id="message" class="form-control" cols="80" rows="6"}}
  </div>
  
  <button type="submit" class="btn btn-default" disabled={{unless isValid 'disabled'}} {{action 'saveMessage'}}>Send Message</button>
</form>

{{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
{{/if}}